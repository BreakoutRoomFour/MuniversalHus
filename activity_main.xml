<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mu_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="54dp"
            android:text="Mu Count: 420"/>

        <!--Mu face button-->
        <ImageButton
            android:id="@+id/mutton"
            android:layout_width="222dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/whitemutton" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upgrade1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upgrade1" />

            <Button
                android:id="@+id/upgrade2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upgrade2" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
